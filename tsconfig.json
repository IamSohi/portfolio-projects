{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/*"],
      "@ui/*": ["packages/ui/*"],
      "@utils/*": ["packages/utils/*"]
    },
    "outDir": "./dist"
  },
  "include": ["apps/**/*", "packages/**/*"]
}
